<!-- To be introduced in 3.0 -->
<!-- 
For IPA templates the syntax is:
	<ChartType>
		<s> (s = Sound)
			<v>Variation</v> (v = variation)
		</s>
	</ChartType>
	
Alternate syntax if there are no variations:	
	<ChartType>
		<s>Sound</s>
	</ChartType>
	
Order does not matter
-->

<!-- Render a chart for a 5 vowel system (like Spanish) -->
<VowelChart>
	<s>a</s>
	<s>e</s>
	<s>i</s>
	<s>o</s>
	<s>u</s>
</VowelChart>

<!-- Render a vowel chart showing the orthography -->
<VowelChart>
	<s spelling="aa">a</s>
	<s spelling="a">ə</s>
	<s spelling="á">æ</s>
	<s spelling="e">e</s>
	<s spelling="i">i</s>
	<s>
		<v spelling="o">o</v>
		<v spelling="on">õ</v>
	</s>
	<s spelling="u">u</s>
</VowelChart>

<!-- Fancy example showing all of the syntax:
	- Show orthography
	- Show variations of sounds (i.e. labialized, ejective, aspirated)
-->
